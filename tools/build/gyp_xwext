#!/usr/bin/env python

import os
import sys

script_dir = os.path.dirname(os.path.realpath(__file__))
tools_dir = os.path.abspath(os.path.join(script_dir, os.pardir))

try:
  import gyp
except ImportError, e:
  sys.path.append(os.path.join(tools_dir, 'gyp/pylib'))
  import gyp

if __name__ == '__main__':
  args = sys.argv[1:]
  args.append('--depth=.')
  args.append('-I' + os.path.join(script_dir, 'common.gypi'))

  sys.exit(gyp.main(args))
